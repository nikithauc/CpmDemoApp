@model List<CpmDemoApp.Models.Conversation>

@{
    ViewBag.Title = "Conversations";
}

<h2>Conversations</h2>

<table>
    <thead>
        <tr> 
            <th>Phone Number</th>
            <th>Message</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var conversation in Model)
        {
            <tr>
                <td>@conversation.Id </td>
                <td>@conversation.IncomingMessage.From</td>
                
                <td>
                    <form method="post" action="/conversation/delete">
                        <input type="hidden" name="id" value="@conversation.Id" />
                        <button type="submit">Delete</button>
                    </form>
                    <form method="post" action="/conversation/update">
                        <input type="hidden" name="id" value="@conversation.Id" />
                        <button type="submit">Update</button>
                    </form>
                    <a href="@Url.Action("AddPage", "ConversationManagement", new {id = conversation.Id})"> Add Agent </a>
                    <a href="@Url.Action("Remove", "ConversationManagement", new {id = conversation.Id})"> Remove Agent </a>
                </td>
            </tr>
        }
    </tbody>
</table>