@model List<CpmDemoApp.Models.Conversation>

@{
    ViewBag.Title = "My Conversations";
}
<style>
        td {
        padding: 10px;
        text-align: left;
        vertical-align: middle;
    }

    form {
        display: block;
        margin-bottom: 10px;
        background-color: white;
        border:none:
        float:left
    }

    .linkbutton {
        background: none;
        color: #007bff; /* Bootstrap primary color for links */
        border: none;
        padding: 0;
        font: inherit;
        cursor: pointer;
        text-decoration: underline;
    }

    .linkbutton:hover {
        color: #0056b3; /* Darker blue on hover */
    }

    a {
        display: block;
        margin-bottom: 10px;
        color: #007bff;
        text-decoration: underline;
    }

    a:hover {
        color: #0056b3;
    }
</style>
<h2 class="titles">My Conversations</h2>

<table>
    <thead>
        <tr>
            <th>Conversation Id</th>
            <th>Phone Number</th>
            <th>Message</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var conversation in Model)
        {
            <tr>
                <td>@conversation.Id </td>
                <td>@conversation.IncomingMessage.From</td>
                <td>@conversation.IncomingMessage.MessageContent</td>

                <td>
                    <a href="@Url.Action("ConversationsPage", "EmployeePortal", new {id = conversation.Id})">View Conversation</a>
                </td>
            </tr>
        }
    </tbody>
</table>